    %tbody
      %fb:if-is-friends-with-viewer
        %tr.dataRow
          %th
          %td.data
            %a.profile_action.actionspro_a{:href=>"/ajax/messaging/composer.php?id=#{@rental_unit.fb_user_id}",:rel=>"dialog",:id=>"profile_action_send_message"} 
