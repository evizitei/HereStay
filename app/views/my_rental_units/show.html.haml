        %td{:colspan=>3}
          %hr
      %tr.dataRow
        %td{:colspan=>3}
          %fb:iframe{:src=>"http://www.micasa-fb.com/rental_units/#{@rental_unit.id}/gallery",:smartsize=>"false",:frameborder=>"0",:height=>"400",:width=>"600",:scrolling=>"no"}
      %tr.spacer
        %td{:colspan=>3}
          %hr
      %tr.dataRow
        %td{:colspan=>3}
          %fb:iframe{:src=>"http://www.micasa-fb.com/rental_units/#{@rental_unit.id}/map",:smartsize=>"false",:frameborder=>"0",:height=>"400",:width=>"600",:scrolling=>"no"}
