        %td{:colspan=>3}
          %hr
      -if @rental_unit.has_video?
        %tr.dataRow
          %td{:colspan=>3}
            %fb:iframe{:src=>"http://www.micasa-fb.com/rental_units/#{@rental_unit.id}/watch_video",:smartsize=>"false",:frameborder=>"0",:height=>"400",:width=>"600",:scrolling=>"no"}
        %tr.spacer
          %td{:colspan=>3}
            %hr
