%h2 Photos for #{@rental_unit.name}
= fb_button 'Back to My Listings', manage_my_rental_units_path

%br
- @photos.each do |photo|
  .photo{:style=>"padding:10px;margin-bottom:5px;", :class => cycle("even","odd")}
    =image_tag(photo.picture.url(:thumb))
    .actions.f_right
      = fb_button 'Delete', delete_photo_my_rental_unit_path(@rental_unit, :photo_id => photo.id), :method => :delete
%br
#photo_form{:style=>"background-color:#FFC67D;"}
  =form_for :photo,:url=>new_photo_my_rental_units_path,:html => { :multipart => true } do |f|
    =f.hidden_field :rental_unit_id
    %br
    = f.label :picture,"New Photo:"
    = f.file_field :picture
    %br
    %label.fbButton= f.submit "Add", :disable_with => 'Loading...'