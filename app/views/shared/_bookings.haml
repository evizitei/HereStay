%table{:style=>"background-color:#FFC67D;font-size:12pt;", :width => "100%"}
  %thead
    %tr
      %th{:style=>"padding:3px;"} ID
      %th{:style=>"padding:3px;"} Discussion
      %th{:style=>"padding:3px;"} Arrive
      %th{:style=>"padding:3px;"} Depart
      %th{:style=>"padding:3px;"} Amount
      %th{:style=>"padding:3px;"} Fee
      %th{:style=>"padding:3px;"} Renter
      %th{:style=>"padding:3px;"} Description
  %tbody
    -booking_collection.each do |booking|
      %tr
        %td{:style=>"padding:3px;font-size:10pt;"}
          = link_to booking.id, edit_rental_unit_booking_path(booking.rental_unit, booking)
        %td{:style=>"padding:3px;font-size:10pt;"}
          -unless booking.reserved?
            = link_to "Discussion", booking_messages_path(booking)
        %td{:style=>"padding:3px;font-size:10pt;"}
          -if booking.start_date
            = booking.start_date.strftime("%m/%d/%Y")
        %td{:style=>"padding:3px;font-size:10pt;"}
          -if booking.stop_date
            = booking.stop_date.strftime("%m/%d/%Y")
        %td{:style=>"padding:3px;font-size:10pt;"}
          $
          -if booking.amount
            =booking.amount
          -else
            \----
        %td{:style=>"padding:3px;font-size:10pt;"}
          $
          =booking.promotional_fee
        %td{:style=>"padding:3px;font-size:10pt;"}
          -if booking.renter_fb_id
            = fb_profile_pic(:uid=>booking.renter_fb_id,:size=>"thumb")
            = fb_name(:uid=>booking.renter_fb_id)
          -else
            =booking.renter_name
        %td{:style=>"padding:3px;font-size:10pt;"}= booking.description