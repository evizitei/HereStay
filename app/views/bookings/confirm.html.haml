:javascript
  function calculate_fee(){
    var val;
    val = parseFloat($("#booking_amount").val());
    if(isNaN(val)){
      $("#fee").html("$ 0.00");
    }else{
      val = (Math.round((val * 0.05) * 100) / 100);
      $("#fee").html("$" + val + "");
    }
  }
  
  $(document).ready(function(){
    $("#booking_amount").bind("blur",calculate_fee);
  });

%h2 Confirm Booking for #{@booking.rental_unit.name}
.pal.grayArea.gray_box.noborder{:style=>"background-color:#FFC67D;"}
  #booking_form
    =form_for :booking, :url=> exec_confirm_booking_path(@booking), :html => {:method => :put} do |f|
      %table.dataTable
        %tbody
          %tr.dataRow
            %th.label Start Date:
            %td.data= f.date_select :start_date
            %td.rightCol
          %tr.dataRow
            %th.label Stop Date:
            %td.data= f.date_select :stop_date
            %td.rightCol
          %tr.dataRow
            %th.label Amount:
            %td.data
              $
              = f.text_field :amount
            %td.rightCol
              %b Fee:
              %span#fee
          %tr.spacer
            %td{:colspan=>3}
              %hr
          %tr.dataRow
            %th.label Description:
            %td.data= f.text_area :description,:rows=>5
            %td.rightCol
        %tfoot
          %tr.dataRow
            %th.label
            %td.data
              = fb_button do
                = f.submit "Save"
              = fb_button('Cancel', discuss_booking_path(@booking))
