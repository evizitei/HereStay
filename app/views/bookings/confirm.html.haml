:javascript
  function calculate_fee(){
    var val;
    val = parseFloat($("#booking_amount").val());
    if(isNaN(val)){
      $("#fee").html("$ 0.00");
    }else{
      val = (Math.round((val * 0.05) * 100) / 100);
      $("#fee").html("$" + val + "");
    }
  }
  
  $(document).ready(function(){
    $("#booking_amount").bind("blur",calculate_fee);
  });
=raw(enable_jqueryui_datepicker)
%h2 Confirm Booking for #{resource.rental_unit.name}
= error_messages_for resource
.pal.grayArea.gray_box.noborder.colored-bg
  #booking_form
    =form_for :booking, :url=> [:exec_confirm, parent, resource], :html => {:method => :put} do |f|
      %table.dataTable
        %tbody
          %tr.dataRow
            %th.label Start Date:
            %td.data=date_picker_tag("booking[start_date]",resource.start_date)
            %td.rightCol
          %tr.dataRow
            %th.label Stop Date:
            %td.data=date_picker_tag("booking[stop_date]",resource.stop_date)
            %td.rightCol
