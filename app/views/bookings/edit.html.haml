:javascript
  function calculate_fee(){
    var val;
    val = parseFloat($("#booking_amount").val());
    if(isNaN(val)){
      $("#fee").html("$ 0.00");
    }else{
      val = (Math.round((val * 0.05) * 100) / 100);
      $("#fee").html("$" + val + "");
    }
  }
  
  $(document).ready(function(){
    $("#booking_amount").bind("blur",calculate_fee);
  });
