%label.uiButton.uiButtonConfirm.uiButtonMedium{:style=>"color:white;font-size:15px;float:right;margin:3px;"}
  %a{:href=>"/#{fb_app_name}/my_rental_units/new_booking?id=#{@rental_unit.id}"}
    %input{:type=>"button",:value=>"Create Booking"}
%h1{:style=>"font-size:16pt;"}== Bookings for "#{@rental_unit.name}"
%br
%br
%table{:style=>"background-color:#FFC67D;font-size:12pt;"}
  %thead
    %tr
      %th{:style=>"padding:3px;"} ID
      %th{:style=>"padding:3px;"} Discussion
      %th{:style=>"padding:3px;"} Arrive
      %th{:style=>"padding:3px;"} Depart
      %th{:style=>"padding:3px;"} Renter
      %th{:style=>"padding:3px;"} Description
  %tbody
    -@bookings.each do |booking|
      %tr
        %td{:style=>"padding:3px;font-size:10pt;"}=booking.id
        %td{:style=>"padding:3px;font-size:10pt;"}
          -if booking.status != "COMPLETE"
            =link_to "Discussion","/#{fb_app_name}/bookings/discuss?booking_id=#{booking.id}"
        %td{:style=>"padding:3px;font-size:10pt;"}
          -if booking.start_date
            = booking.start_date.strftime("%m/%d/%Y")
        %td{:style=>"padding:3px;font-size:10pt;"}
          -if booking.stop_date
            = booking.stop_date.strftime("%m/%d/%Y")
        %td{:style=>"padding:3px;font-size:10pt;"}
          -if booking.renter_fb_id
            %fb:profile-pic{:uid=>booking.renter_fb_id,:size=>"thumb"}
            %fb:name{:uid=>booking.renter_fb_id}
          -else
            =booking.renter_name
        %td{:style=>"padding:3px;font-size:10pt;"}= booking.description
        
%label.uiButton.uiButtonConfirm.uiButtonMedium{:style=>"color:white;font-size:15px;margin:3px;"}
  %a{:href=>"/#{fb_app_name}/manage_my_rental_units"}
    %input{:type=>"button",:value=>"Back to My Listings"}